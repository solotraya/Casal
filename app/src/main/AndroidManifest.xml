<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ccastro.casal">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/casal_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/casal_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"> <!-- android:theme="@style/AppTheme.NoActionBar"> -->
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ClientActivity">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".VentaActivity" />
        <activity android:name=".FacturaActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".MesaActivity" />
        <activity android:name=".ReservaActivity" />
        <activity android:name=".PedidoActivity" />
        <activity android:name=".InsertarClienteActivity" />
        <activity android:name=".ProductoActivity" />
        <activity android:name=".InsertarProductoActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".InsertarMenuSemanalActivity" />
        <activity android:name=".PlatoActivity" />
        <activity android:name=".InsertarPlatoActivity" />
    </application>

</manifest>