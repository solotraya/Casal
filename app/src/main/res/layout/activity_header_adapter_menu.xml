<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="idMenua"
            android:visibility="gone" />

        <TextView
            android:id="@+id/diaMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="diaMenu"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/primerPlato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="primerPlato"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/segundoPlato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="segundoPlato"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"

                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/gluten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="gluten" />

                    <TextView
                        android:id="@+id/crustaceos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="crustaceos" />

                    <TextView
                        android:id="@+id/huevos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="huevos" />

                    <TextView
                        android:id="@+id/cacahuetes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cacahuetes" />

                    <TextView
                        android:id="@+id/lacteos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="lacteos" />

                    <TextView
                        android:id="@+id/cascaras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cascaras" />

                    <TextView
                        android:id="@+id/apio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="apio" />

                    <TextView
                        android:id="@+id/azufre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="azufre" />

                    <TextView
                        android:id="@+id/moluscos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="moluscos" />

                </LinearLayout>

            </LinearLayout>


            </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

